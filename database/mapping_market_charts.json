            "type": "float"
          },
          "domains": {
            "type": "keyword"
          }
        }
      },
      "influencer_chart": {
        "properties": {
          "theme": {
            "type": "text"
          },
          "documents": {
            "type": "nested",
            "properties": {
              "author": {
                "type": "keyword"
              },
              "title": {
                "type": "text"
              },
              "description": {
                "type": "text"
              },
              "likes": {
                "type": "double"
              },
              "source": {
                "type": "keyword"
              }
            }
          }
        }
      },
