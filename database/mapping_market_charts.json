        "properties": {
          "dates": {
            "type": "date"
          },
          "colors": {
            "type": "keyword"
          },
          "negative": {
            "type": "integer"
          },
          "negative_sources": {
            "type": "text"
          },
          "neutral": {
            "type": "integer"
          },
          "neutral_sources": {
            "type": "text"
          },
          "positive": {
            "type": "integer"
          },
          "positive_sources": {
            "type": "text"
          },
          "sentiment_texts": {
            "type": "nested",
