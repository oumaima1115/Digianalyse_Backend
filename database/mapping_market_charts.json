                  "text": {
                    "type": "keyword"
                  },
                  "value": {
                    "type": "integer"
                  }
                }
              },
              "fontFamily": {
                "type": "keyword"
              },
              "colors": {
                "type": "keyword"
              }
            }
          }
        }
      },
      "last_hour_chart": {
        "properties": {
