        "properties": {
          "interests": {
            "type": "text"
          },
          "texts": {
            "type": "nested",
            "properties": {
              "author": {
                "type": "keyword"
              },
              "source": {
                "type": "keyword"
              },
              "text": {
                "type": "keyword"
              }
