    "properties": {
      "user_id": {
        "type": "keyword"
      },
      "mention": {
        "type": "text"
      },
      "months_chart": {
        "properties": {
          "colors": {
            "type": "keyword"
          },
          "months": {
            "type": "keyword"
          },
          "sources": {
            "type": "keyword"
          },
          "sources_total_mentions": {
            "type": "text"
          },
          "sources_total_unique_authors": {
            "type": "text"
          },
          "total_mentions": {
